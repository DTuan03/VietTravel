<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".regis.view.RegisActivity">
    <LinearLayout
        android:id="@+id/activity_regis_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_regis_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/activity_regis_iv_back"
            android:layout_width="67dp"
            android:layout_height="62dp"
            android:contentDescription="@string/quay_lai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_back_adaptive_fore" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="@string/activity_regis_regis"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/activity_regis_iv_back"
            app:layout_constraintTop_toTopOf="@+id/activity_main_mtCaiDat" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_regis_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="@string/activity_regis_full_name"
                android:textColor="@color/tvXam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_main_mtCaiDat" />

            <EditText
                android:id="@+id/activity_regis_et_full_name"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="text"
                android:textColorHint="#A09B9B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.485"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="LabelFor,SpeakableTextPresentCheck, Autofill" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="@string/activity_regis_phone"
                android:textColor="@color/tvXam"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_regis_et_full_name" />

            <EditText
                android:id="@+id/activity_regis_et_phone"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="20dp"
                android:ems="10"
                android:inputType="number"
                android:textColorHint="#A09B9B"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.478"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="LabelFor,SpeakableTextPresentCheck, Autofill" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="566dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/activity_regis_pass"
                    android:textColor="@color/tvXam"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/activity_regis_et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingRight="45dp"
                    android:textColorHint="#A09B9B"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck,Autofill" />

                <ImageView
                    android:id="@+id/activity_regis_iv_pass_eye_hiden"
                    android:layout_width="58dp"
                    android:layout_height="61dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_regis_et_pass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@mipmap/icon_eye_hidden" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:text="@string/activity_regis_confirm_pass"
                    android:textColor="@color/tvXam"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_et_pass" />


                <EditText
                    android:id="@+id/activity_regis_et_confirm_pass"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:paddingRight="45dp"
                    android:textColorHint="#A09B9B"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    tools:ignore="LabelFor,SpeakableTextPresentCheck, Autofill" />

                <TextView
                    android:id="@+id/activity_regis_tv_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/regis_error"
                    android:textColorLink="@color/regis_error"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_et_confirm_pass" />

                <ImageView
                    android:id="@+id/activity_regis_iv_confirm_eye_hiden"
                    android:layout_width="58dp"
                    android:layout_height="61dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_regis_et_confirm_pass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@mipmap/icon_eye_hidden" />

                <Button
                    android:id="@+id/activity_regis_btn_regis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/regis_before"
                    android:enabled="false"
                    android:text="@string/activity_regis_regis"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_et_confirm_pass" />

                <TextView
                    android:id="@+id/activity_regis_tv_rules"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/activity_regis_rules"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_btn_regis" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="130dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="72dp"
                    android:layout_marginEnd="25dp"
                    android:background="#000000"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.2"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_tv_rules" />

                <View
                    android:id="@+id/view"
                    android:layout_width="120dp"
                    android:layout_height="0.5dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="72dp"
                    android:layout_marginEnd="20dp"
                    android:background="#000000"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/textView7"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_tv_rules" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="51dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/activity_regis_or"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.488"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_tv_login" />

                <TextView
                    android:id="@+id/activity_regis_tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Bạn đã có tài khoản?"
                    android:textColor="#2196F3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_regis_tv_rules" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>