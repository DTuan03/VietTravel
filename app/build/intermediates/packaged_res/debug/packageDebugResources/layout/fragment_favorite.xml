<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".favorite.view.FavoriteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_favorite_cl_tim_kiem"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_actionbar"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/fragment_favorite_et_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="60dp"
                android:background="@drawable/fragment_home_backgroud_search"
                android:ems="10"
                android:hint="Tìm kiếm"
                android:inputType="text"
                android:paddingStart="40dp"
                android:textColorHint="@color/tvXam"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_favorite_et_search"
                app:layout_constraintStart_toStartOf="@+id/fragment_favorite_et_search"
                app:layout_constraintTop_toTopOf="@+id/fragment_favorite_et_search"
                app:srcCompat="@drawable/baseline_search_24" />

            <ImageView
                android:id="@+id/fragmet_home_img_cart"
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/baseline_shopping_cart_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/fragment_favorite_et_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/fragment_favorite_sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_favorite_rcv_favtour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </ScrollView>
    </LinearLayout>

    <!--    android:visibility="gone" để ẩn -->
    <TextView
        android:id="@+id/empty_view_fav_tour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Bạn chưa có tour yêu thích nào"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!--    android:visibility="gone" để ẩn -->
    <TextView
        android:id="@+id/empty_search_view_fav_tour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:text="Không có kết quả phù hợp!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>