<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_recommend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/item_recommend_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_horizontal"
                    android:scaleType="matrix"
                    tools:srcCompat="@drawable/img" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_recommend_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Nha Trang Ca Mau "
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="34dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="-6dp"
                    android:layout_marginTop="-9dp"
                    android:layout_marginBottom="-6dp"
                    app:srcCompat="@mipmap/item_propose_star" />

                <TextView
                    android:id="@+id/item_recommend_tv_number_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-10dp"
                    android:layout_marginTop="-3dp"
                    android:layout_weight="1"
                    android:text="4.4"
                    android:textColor="#FF9800"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="â‚« "
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/item_recommend_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="840,000"
                    android:textColor="@color/black"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="70dp"
            android:layout_height="83dp"
            android:layout_gravity="end"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-20dp"
            app:srcCompat="@mipmap/activity_home_favorite" />

    </FrameLayout>
</androidx.cardview.widget.CardView>