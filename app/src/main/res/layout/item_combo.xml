<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_combo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    app:cardElevation="0dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/item_combo_img"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/img" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/item_combo_tv_name_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Nha Trang Ca Mau "
                android:textColor="@color/black"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="â‚« "
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/item_combo_price_tour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="840,000"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/item_combo_img_favorite"
            android:layout_width="60dp"
            android:layout_height="83dp"
            android:layout_gravity="end"
            android:layout_marginTop="-25dp"
            android:layout_marginEnd="-12dp"
            app:srcCompat="@mipmap/activity_home_favorite" />

    </FrameLayout>
</androidx.cardview.widget.CardView>