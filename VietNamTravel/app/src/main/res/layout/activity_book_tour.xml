<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookTour.view.BookTourActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue_light"
            android:padding="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:id="@+id/activity_book_tour_img_back"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:text="Đặt tour"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingBottom="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/activity_book_tour_img"
                        android:layout_width="150dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearance="@style/boder_pic"
                        app:srcCompat="@drawable/img_0">
                    </com.google.android.material.imageview.ShapeableImageView>

                    <TextView
                        android:id="@+id/activity_book_tour_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:text="Thông tin tour"
                        android:maxLines="3"
                        android:textColor="@color/blue_light"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:hint="Họ và tên" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:hint="Số điện thoại" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:hint="Email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_start_day"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:drawablePadding="8dp"
                    android:hint="Ngày bắt đầu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày kết thúc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_end_day"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:drawablePadding="8dp"
                    android:hint="Ngày kết thúc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số người"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_number_people"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:hint="Số người" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ưu đãi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/activity_book_tour_et_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:hint="Voucher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    android:layout_margin="8dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/activity_book_tour_sp_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_border"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/textSize"
                    android:entries="@array/sp_payment_method"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tổng giá tiền:"
                                android:textSize="@dimen/textSize"
                                android:layout_marginLeft="40dp"
                                android:textColor="@color/blue_dark"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/activity_book_tour_tv_price"
                                android:text="@string/price"
                                android:textSize="@dimen/textSize"
                                android:textColor="@color/orange_black"
                                android:textAlignment="textEnd"
                                android:layout_marginRight="40dp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/activity_book_tour_btn_booking"
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:background="@drawable/button_background"
                            android:text="Đặt tour"
                            android:textSize="@dimen/textSize"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>